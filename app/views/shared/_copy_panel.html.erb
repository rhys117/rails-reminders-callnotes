<h1><%= current_user.name %></h1>
<h3>Quick Copy</h3>
<% @quick_notes.group_by(&:category).each do |category, notes| %>
  <h4><%= category %></h4>
    <% notes.each do |note| %>
      <p class="copy-data" id="<%= "#{note.category}-#{note.name}" %>"><%= note.content %></p>
      <a class="copy-text btn-primary btn-xs text-nowrap" data-clipboard-action="copy" data-clipboard-target="#<%= "#{note.category}-#{note.name}"%>" href="#"><%= note.name %></a>
    <% end %>
<% end %>
