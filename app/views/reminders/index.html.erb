<% provide(:title, 'Reminders') %>

<%= render 'shared/reminders_search' %>
<h1 class="text-center">Reminders</h1>

<div class="divider-40"></div>
<% @reminders.group_by(&:date).each do |date, reminders| %>
  <div class="col-centered col-md-8">
    <h2 class="text-center"><%= display_date(date) %></h2>
      <%= render partial: 'reminder_table', locals: { reminders: reminders } %>
    <div class="divider-10"></div>
  </div>
<% end %>

<div class="text-right">
  <%= will_paginate %>
</div>